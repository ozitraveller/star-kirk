#!/bin/sh

set -e

echo STAR-LIVE-Hook: "$0"
echo ""

echo "I: Enable ufw"
echo "I: ufw reject incoming"

# http://crunchbang.org/forums/viewtopic.php?pid=404787#p404787

ufw disable

ufw default allow outgoing
ufw default reject incoming
# ufw allow ssh /port 22
# ufw delete allow 22

ufw enable

ufw status
